.collect_content {
  background-color: #ccc;
}
.collect_content .collect_main navigator {
  display: flex;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #ccc;
  background-color: #fff;
}
.collect_content .collect_main navigator .goods_image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_content .collect_main navigator .goods_image image {
  width: 70%;
}
.collect_content .collect_main navigator .goods_info {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-right: 10rpx;
}
.collect_content .collect_main navigator .goods_info .info_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
}
.collect_content .collect_main navigator .goods_info .buy_number {
  color: #a8a6a6;
  font-size: 24rpx;
}
.collect_content .collect_main navigator .goods_info .list_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 20rpx;
}
.collect_content .collect_main navigator .goods_info .list_info .info_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.collect_content .collect_main navigator .goods_info .list_info .sales {
  font-size: 24rpx;
  color: #999696;
}
